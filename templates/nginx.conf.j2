worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    server {
        listen 443 ssl;
        server_name localhost;

        ssl_certificate      C:/nginx/conf/certs/server-cert.pem;
        ssl_certificate_key  C:/nginx/conf/certs/server-key.pem;

        location / {
            root   html;
            index  index.html index.htm;
        }
    }
}
